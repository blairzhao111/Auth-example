<% include includes/header %>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<% if (user) { %>
					<div class="page-header">
						<h2><%= title%>&nbsp;<small>Already been authenticated...</small></h2>
					</div>
					<div class="row text-center">
						<div class="col-md-12">
							<h3>Welcome, <strong><%= user.username%></strong></h3>
							<p>Now you are an authenticed user, go and click protected link</p>	
						</div>
						<div class="col-md-6 col-md-offset-3">
							<a class="btn btn-warning btn-block" href="/logout">Logout</a>
						</div>
					</div>
				<% } else {%>
					<div class="page-header">
						<h2><%= title%>&nbsp;<small>Choose login or register...</small></h2>
					</div>
					<div class="row text-center">
						<div class="col-md-6">
							<a class="btn btn-primary btn-block" href="/login">Login</a>						
						</div>
						<div class="col-md-6">
							<a class="btn btn-info btn-block" href="/register">Register</a>
						</div>
					</div>
				<% } %>
				<br>
				<div class="row">
					<div class="col-md-12">
						<a href="/protected" class="btn btn-link btn-block">Link to protected content, only authenticated user can access...</a>						
					</div>
				</div>

			</div>
		</div>
	</div>
<% include includes/footer %>